DOCTYPE
html
	head
		title Robot Rewards
		link(type="text/css" rel="stylesheet" href="semantic/semantic.min.css")
		link(type="text/css" rel="stylesheet" href="components/button.min.css")
		link(type="text/css" rel="stylesheet" href="components/container.min.css")
		link(type="text/css" rel="stylesheet" href="components/dimmer.min.css")
		link(type="text/css" rel="stylesheet" href="components/dropdown.min.css")
		link(type="text/css" rel="stylesheet" href="components/form.min.css")
		link(type="text/css" rel="stylesheet" href="components/grid.min.css")
		link(type="text/css" rel="stylesheet" href="components/icon.min.css")
		link(type="text/css" rel="stylesheet" href="components/image.min.css")
		link(type="text/css" rel="stylesheet" href="components/input.min.css")
